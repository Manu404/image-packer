<Window x:Class="ImagePacker.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>

        <UserControl Style="{StaticResource MenuView}" DataContext="{Binding MenuViewModel}"/>

        <UserControl Style="{StaticResource ImageViewer}" Grid.Row="1" DataContext="{Binding SelectedItem, ElementName=Gallery}"></UserControl>

        <UserControl Grid.Row="2" DataContext="{Binding Project}">
            <ListView  Style="{StaticResource ImageListView}" ItemsSource="{Binding Files}" x:Name="Gallery" />
        </UserControl>

    </Grid>
</Window>
