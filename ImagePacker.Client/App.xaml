<Application x:Class="ImagePacker.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:viewmodel="clr-namespace:ImagePacker.Client.ViewModel" xmlns:helper="clr-namespace:ImagePacker.Client.Common.Helper">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="View/MenuView.xaml" />
                <ResourceDictionary Source="View/GalleryView.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <helper:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
            <helper:InverseBooleanConverter x:Key="InverseBooleanConverter" />

        </ResourceDictionary>         
    </Application.Resources>
</Application>
